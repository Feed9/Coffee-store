@using Coffee_store.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "admin"))
{
    <li class="nav-item ">
        <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
        <a class="dropdown-item" asp-area="Admin" asp-controller="Addition" asp-action="Index">Additions</a>
    </li>



}
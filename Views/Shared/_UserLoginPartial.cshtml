@model Coffee_store.Models.UserLoginModel;

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Authorization</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id="UserLoginForm" asp-controller="UserAuth" asp-action="Login">
                <div asp-validation-summary=ModelOnly class="text-danger"></div>
                <input type="hidden" asp-for="@Model.LoginInValid" />
                <div class="form-group row">
                    <label asp-for="@Model.Email" class="col-md-4 col-form-label"></label>
                    <div class="col-md-8">
                        <input type="text" asp-for="@Model.Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.Password" class="col-md-4 col-form-label"></label>
                    <div class="col-md-8">
                        <input type="text" asp-for="@Model.Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8 offset-md-4">
                        <div class="form-check">
                            <input asp-for="@Model.RememberMe" class="form-check-input" />
                            <label asp-for="@Model.RememberMe" class="form-check-label"></label>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" id="login" name="login" class="btn btn-primary">Login</button>
        </div>
    </div>
</div>

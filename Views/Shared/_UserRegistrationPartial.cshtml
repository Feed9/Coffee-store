@model Coffee_store.Models.UserRegistrationModel;

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel2">Registration</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div id="alert_placeholder_register">
            </div>
            <form id="UserRegistrationForm" asp-controller="UserAuth" asp-action="Register">
                <div asp-validation-summary=ModelOnly class="text-danger"></div>
                <input type="hidden" asp-for="@Model.RegistrationInValid" />

                <div class="form-group row">
                    <label asp-for="@Model.Email" class="col-md-4 col-form-label"></label>
                    <div class="col-md-8">
                        <input type="text" asp-for="@Model.Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.Password" class="col-md-4 col-form-label"></label>
                    <div class="col-md-8">
                        <input type="text" asp-for="@Model.Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.ConfirmPassword" class="col-md-4 col-form-label"></label>
                    <div class="col-md-8">
                        <input type="text" asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.FirstName" class="col-md-4 col-form-label"></label>
                    <div class="col-md-8">
                        <input type="text" asp-for="@Model.FirstName" class="form-control" placeholder="First Name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.LastName" class="col-md-4 col-form-label"></label>
                    <div class="col-md-8">
                        <input type="text" asp-for="@Model.LastName" class="form-control" placeholder="Last Name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>                
                <div class="form-group row">
                    <label asp-for="@Model.PhoneNumber" class="col-md-4 col-form-label"></label>
                    <div class="col-md-8">
                        <input type="text" asp-for="@Model.PhoneNumber" class="form-control" placeholder="Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <div class="form-check">
                            <input asp-for="@Model.AcceptUserAgreement" class="form-check-input" />
                            <label asp-for="@Model.AcceptUserAgreement" class="form-check-label">I accept the <a href="#">Terms of Use</a> and <a href="#">Privacy Policy</a>    </label>
                        </div>
                    </div>
                </div>
            </form>
            <div class="col-sm12">
                <a class="nav-link text-dark" asp-area=""  data-bs-toggle="modal" data-bs-target="#UserRegistrationModal">LogIn</a>

            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" id="registration" name="registration" class="btn btn-primary">Register</button>
        </div>
    </div>
</div>
@model Coffee_store.Data.Entity.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row admin-panel">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentMethod)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CancellationRequest.Reason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CancellationRequest.Reason)
        </dd>
    </dl>
    <div class="row">
        @foreach (var items in @Model?.OrderItems!)
        {
            <div class="row">
                <div class="col cart-item-icon">
                    <img src="@items.Product?.IconPath" style="height:100px;width:100px;" alt="" />
                </div>
                <div class="col cart-item-text">
                    <h5>@items.Product?.Name</h5>
                    <p>Volume: @items.Volume </p>
                    <p>Additions: @items.AdditionsString</p>
                </div>
                <div class="col d-flex">
                    <p class="cart-item-quantity">@items.Count</p>
                </div>
            </div>
            <div>
                <br />
                <p>@items.Price руб</p>
            </div>
        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Вернуться</a>
</div>

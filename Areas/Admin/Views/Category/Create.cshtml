@model Coffee_store.Data.Entity.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Создание</h1>

<h4>Категории</h4>
<hr />
<div class="row admin-panel">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IconPath" class="control-label"></label>
                <input asp-for="IconPath" class="form-control" />
                <span asp-validation-for="IconPath" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="HasAdditions" class="control-label"></label>
                <input asp-for="HasAdditions" value="true"  type="checkbox" />
                <span asp-validation-for="HasAdditions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn book-a-table-btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

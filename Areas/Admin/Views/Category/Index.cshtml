@model IEnumerable<Coffee_store.Data.Entity.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Категории</h1>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table admin-panel">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IconPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasAdditions)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IconPath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasAdditions)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a> |
                    <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@item.Id">Продукты</a>
                </td>
            </tr>
        }
    </tbody>
</table>
